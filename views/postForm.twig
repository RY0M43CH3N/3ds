{% set title,bodyClasses = "Post","add-post-page" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div class="title-header with-header-banner">
	<div class="header-banner-container post-subtype-default-container">
		<div class="post-form-header">
			<span class="post-subtype-default">Post</span>
		</div>
	</div>
	<h1 class="info-content">
		<span class="icon-container"><img src="{{community.community_icon}}" class="icon" width="48" height="48"></span>
		<span class="title-container">
		<span class="title">{{community.community_name}}</span>
		</span>
	</h1>
	{% if community.community_platform == 1 %}
		<span class="platform-tag platform-tag-3ds"></span>
	{% elseif community.community_platform == 2 %}
		<span class="platform-tag platform-tag-wiiu"></span>
	{% elseif community.community_platform == 3 %}
		<span class="platform-tag platform-tag-wiiu-3ds"></span>
	{% endif %}
</div>
<div class="body-content">
	<div id="form-content">
		<form method="post" action="/posts" id="test-3ds-post-form" data-redirect-to="/titles/{{community.community_title_id}}/{{community.community_id}}" data-is-own-title="1" enctype="multipart/form-data">
			<input type="hidden" name="olive_title_id" value="{{community.community_title_id}}">
			<input type="hidden" name="olive_community_id" value="{{community.community_id}}">
			<input type="hidden" name="view_id" value="">
			<input type="hidden" name="page_param" value="">
			<input type="hidden" name="back_to_community" value="">
			<div class="add-post-page-content">
				<div class="feeling-selector expression">
					<ul class="buttons">
						<li class="checked">
							<input type="radio" name="feeling_id" value="0" class="feeling-button-normal" checked data-sound="SE_OLV_OK_SUB">
						</li>
						<li class="">
							<input type="radio" name="feeling_id" value="1" class="feeling-button-happy" data-sound="SE_OLV_OK_SUB">
						</li>
						<li class="">
							<input type="radio" name="feeling_id" value="2" class="feeling-button-like" data-sound="SE_OLV_OK_SUB">
						</li>
						<li class="">
							<input type="radio" name="feeling_id" value="3" class="feeling-button-surprised" data-sound="SE_OLV_OK_SUB">
						</li>
						<li class="">
							<input type="radio" name="feeling_id" value="4" class="feeling-button-frustrated" data-sound="SE_OLV_OK_SUB">
						</li>
						<li class="">
							<input type="radio" name="feeling_id" value="5" class="feeling-button-puzzled" data-sound="SE_OLV_OK_SUB">
						</li>
					</ul>
				</div>
				<input type="hidden" name="album_image_id" value="">
				<div class="textarea-with-menu active-text">
					<menu class="textarea-menu">
						<li><label class="textarea-menu-text">
							<input type="radio" name="_post_type" value="body" checked data-sound="SE_OLV_TEXTBOX">
							</label>
						</li>
						<li><label class="textarea-menu-memo">
							<input type="radio" name="_post_type" value="painting" data-sound="">
							</label>
						</li>
					</menu>
					<textarea name="body" class="textarea-text" value="" maxlength="200" cave_oninput="$(document.activeElement).trigger('input')" placeholder="Share your thoughts in a post to this community."></textarea>
					<div class="textarea-text-preview placeholder">Share your thoughts in a post to this community.</div>
					<div class="textarea-memo trigger" data-sound="">
						<div class="textarea-memo-preview"></div>
						<input type="hidden" name="painting" disabled>
					</div>
				</div>
				<div id="bottom-menu">
					<input type="button" class="cancel-button fixed-bottom-button" data-sound="SE_OLV_CANCEL" value="Cancel">
					<input type="submit" class="fixed-bottom-button fixed-bottom-button-post" disabled value="Post">
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}