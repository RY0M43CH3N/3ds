{% set title,bodyClasses = "Register","" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div id="header">
	<div id="header-body">
		<h1 id="page-title"><span>Login</span></h1>
	</div>
</div>
<div class="body-content">
	<div class="no-content-window">
		<div class="window">
			{% if err is defined %}
				<font color="red">{{err}}</font>
				<br><br>
			{% endif %}
			<form method="POST" action="/login">
				<font color="red">*</font>Username: <input type="text" name="username"><br>
				<font color="red">*</font>Password: <input type="password" name="password"><br>
				<input type="submit" class="black-button" value="Login">
			</form>
		</div>
	</div>
</div>
{% endblock %}