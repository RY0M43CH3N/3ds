{% set title,bodyClasses = "{{user.display_name}}'s Profile","user-page" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div id="user-content-container">
  <div id="user-content" class="user-page">
    <div id="header">
      <div id="header-body">
        <h1 id="page-title"><span>{{user.display_name}}'s Profile</span></h1>
      </div>
    </div>
    <div class="icon-name-container">
      <div class="user-icon-container"><img src="{{user.user_icon}}" class="user-icon" width="32" height="32"></div>
      <p class="title">
        <span class="nick-name">{{user.display_name}}</span>
        <span class="id-name">{{user.user_username}}</span>
      </p>
    </div>
  </div>
  <div id="header-meta">
    <div class="button-with-option">
      <div id="user-violator-blacklist" class="symbol">
        <select>
          <option value="" selected="">Please make a selection.</option>
          <option value="/users/{{user.user_username}}/violators.create" class="test-option-violators-create">Report</option>
          <option value="/users/{{user.user_username}}/blacklist.confirm" data-screen-name="{{user.display_name}}">Block</option>
        </select>
      </div>
      <div class="toggle-follow-button">
        <button type="button" data-action="/users/{{user.user_username}}.follow.json" class="follow-button none">Follow</button>
        <button type="button" data-action="/users/{{user.user_username}}.unfollow.json" class="unfollow-button" data-screen-name="{{user.display_name}}">Follow</button>
      </div>
    </div>
  </div>
</div>
<div class="body-content">
  <div class="user-button-container scroll ">
    <a href="/users/{{user.user_username}}/diary" data-pjax="1" class="button diary-button"><span class="symbol">View Play Journal</span></a>
  </div>
</div>
{% endblock %}