{% set title,bodyClasses = user.user_display_name ~ "'s Profile","user-page" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div id="user-content-container">
  <div id="user-content" class="user-page">
    <div id="header">
      <div id="header-body">
        <h1 id="page-title"><span>{{user.user_display_name}}'s Profile</span></h1>
      </div>
    </div>
    <div class="icon-name-container">
      <div class="user-icon-container"><img src="{{user.user_icon}}" class="user-icon" width="32" height="32"></div>
      <p class="title">
        <span class="nick-name">{{user.user_display_name}}</span>
        <span class="id-name">{{user.user_username}}</span>
      </p>
    </div>
  </div>
</div>
{% endblock %}