{% set title,bodyClasses = community.community_name,"community-post-list" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div class="title-header with-header-banner">
  <div class="header-banner-container post-subtype-default-container">
    <img src="{{community.community_banner}}" height="168" width="400">
  </div>
  <h1 class="info-content">
    <span class="icon-container"><img src="{{community.community_icon}}" class="icon" width="48" height="48"></span>
    <span class="title-container">
    <span class="title">{{community.community_name}}</span>
    </span>
  </h1>
  {% if community.community_platform == 1 %}
    <span class="platform-tag platform-tag-3ds"></span>
  {% elseif community.community_platform == 2 %}
    <span class="platform-tag platform-tag-wiiu"></span>
  {% elseif community.community_platform == 3 %}
    <span class="platform-tag platform-tag-wiiu-3ds"></span>
  {% endif %}
</div>
<div id="header-meta" class="header-meta-with-description">
  <a href="#" class="favorite-button symbol button top-right-button" data-action-favorite="/titles/{{community.community_title_id}}/{{community.community_id}}/favorite.json" data-action-unfavorite="/titles/{{community.community_title_id}}/{{community.community_id}}/unfavorite.json"></a>
  <a href="/settings/titles/{{community.community_title_id}}/{{community.community_id}}" class="button symbol setting-button" data-sound="SE_OLV_OK_SUB" data-pjax="1"></a>
</div>
<div class="community-info">
  <p class="text">{{community.community_description}}</p>
</div>
<div class="tab2">
  <a id="tab-header-post" href="/titles/{{community.community_title_id}}/{{community.community_id}}/new" data-pjax="1" class="selected"><span class="symbol new-posts">All</span></a>
  <a id="tab-header-hot-post" href="/titles/{{community.community_title_id}}/{{community.community_id}}/hot" class="symbol" data-pjax="1"><span class="name">Popular</span></a>
</div>
<div class="body-content tab3-content">
  <div class="tab-body">
    <div class="post-buttons-content with-memo-button">
      <a href="/titles/{{community.community_title_id}}/{{community.community_id}}/post" class="post-button js-post-button " data-pjax="1"><span class="symbol">Post</span></a>
      <a href="/titles/{{community.community_title_id}}/{{community.community_id}}/post_memo" class="memo-button" data-pjax="1"><span class="symbol">Saved Posts</span></a>
    </div>
    {% for post in posts %}
    <div class="post-list list" data-olv-community-id="{{community.community_id}}">
      <div id="post-{{post.post_id}}" data-href="/posts/{{post.post_id}}" class="post scroll post-subtype-default">
        <div class="body">
          <a href="/users/{{post.post_username}}" data-pjax="1" class="user-icon-container scroll-focus"><img src="{{post.post_icon}}" class="user-icon" width="32" height="32"></a>
          <div class="post-container">
            <div class="user-container">
              <p class="user-name"><a href="/users/{{post.post_username}}" data-pjax="1">{{post.post_username}}</a></p>
              <p class="timestamp-container">
                <span class="timestamp">{{post.post_date}}</span>
              </p>
            </div>
            <div class="post-content">
              <p class="post-content-text">
                <a href="/posts/{{post.post_id}}" class="to-permalink-button" data-pjax="1" tabindex="0">{{post.post_content}}</a>
              </p>
              <div class="post-meta">
                <button type="button" disabled="" class="symbol submit empathy-button disabled" data-feeling="normal" data-action="/posts/{{post.post_id}}/empathies"><span class="empathy-button-text">Yeah!</span></button>
                <span class="empathy symbol"><span class="symbol-label">Yeahs</span><span class="empathy-count">0</span></span><span class="reply symbol"><span class="symbol-label">Comment</span><span class="reply-count">0</span></span><span class="played symbol"><span class="symbol-label">Played</span></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
    <p><a href="/titles/{{community.community_title_id}}/{{community.community_id}}" data-pjax="1" class="more-button scroll">Next</a></p>
  </div>
</div>
{% endblock %}