{% set title,bodyClasses = "Welcome to foxverse!","" %}
{% extends "_layout.twig" %}

{% block mainContent %}
<div id="welcome-start" class="guest-page">
	<div class="window-page">
		<div class="window welcome-window">
			<div class="window-title">
			<p>foxverse is a gaming community that connects people from all over the world using Mii characters.
			Use foxverse to share your gaming experiences and meet people from around the world.</p>
		</div>
		<div class="window-body">
			<div class="window-body-inner message">
				<p><font color="red">*</font>You will need a Nintendo Network ID for grabbing your Mii image.</p>
				<a href="/register" class="black-button">Register</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}